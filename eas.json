{
  "cli": {
    "version": ">= 4.1.2"
  },
  "build": {
    "development": {
      "distribution": "internal",
      "android": {
        "gradleCommand": ":app:assembleDebug",
        "autoIncrement": {"versionCode": true}
      },
      "ios": {
        "buildConfiguration": "Debug",
        "autoIncrement": {"versionCode": true}
      }
    },
    "development-simulator": {
      "distribution": "internal",
      "android": {
        "gradleCommand": ":app:assembleDebug",
        "autoIncrement": {"versionCode": true}
      },
      "ios": {
        "buildConfiguration": "Debug",
        "simulator": true,
        "autoIncrement": {"versionCode": true}
      }
    },
    "preview": {
      "distribution": "internal"
    },
    "production": {
      "android": {
        "autoIncrement": {"versionCode": true}
      }
    }
  },
  "submit": {
    "production": {
      "android": {
        "serviceAccountKeyPath": "./service_account.json",
        "track": "production"
      }
    }
  }
}
